<UserControl x:Class="Match3.MainMenu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Match3"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel Orientation="Vertical">
        <Button Height="50" 
                Width="150" 
                Margin="0 125 0 0" 
                Background="#FFE92D3E" 
                FontFamily="Arial Rounded MT Bold" 
                FontSize="14" 
                Click="StartGameButton_Click">Начать игру</Button>
        <Button Height="50" 
                Width="150" 
                Margin="0 10 0 0" 
                Background="#FF57BC78" 
                FontFamily="Arial Rounded MT Bold" 
                FontSize="14"
                Click="SettingsButton_Click">Настройки</Button>
        <Button Height="50" 
                Width="150" 
                Margin="0 10 0 0" 
                Background="#306ad5" 
                FontFamily="Arial Rounded MT Bold" 
                FontSize="14"
                Click="ExitButton_Click">Выход</Button>
    </StackPanel>
</UserControl>
